package l03.controller;

import java.io.File;
import java.net.URL;
import java.util.List;

import com.fasterxml.jackson.core.type.TypeReference;
import com.fasterxml.jackson.databind.ObjectMapper;

import l03.classes.Deputado;

public class JsonController {

	public static void main(String[] args) throws Exception {
		ObjectMapper mapper = new ObjectMapper();
		TypeReference<List<Deputado>> list = new TypeReference<List<Deputado>>() {};
		mapper.readValue(new URL("https://dadosabertos.camara.leg.br/api/v2/deputados?ordem=ASC&ordenarPor=nome"), list);
		mapper.writeValue(new File("result.json"),list);
	}

}
