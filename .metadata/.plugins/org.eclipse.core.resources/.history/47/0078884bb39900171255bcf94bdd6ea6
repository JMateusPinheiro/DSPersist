package l03.controller;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.URL;
import java.util.List;

import com.fasterxml.jackson.annotation.JsonFormat.Feature;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.fasterxml.jackson.databind.cfg.MapperConfig;

import l03.classes.Dados;
import l03.classes.Deputado;

public class JsonController {

	private ObjectMapper mapper;

	public JsonController() {
		mapper = new ObjectMapper();
	}

	public void JaksonJson() {
		Dados data = new Dados();
		try{
		data = mapper.readValue(new URL("https://dadosabertos.camara.leg.br/api/v2/deputados?ordem=ASC&ordenarPor=nome"), Dados.class);
		mapper.writeValue(new File("./src/main/resources/result.json"), data);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public void serializeObjects(String caminho) throws IOException {
		Dados data = new Dados();
		data = mapper.readValue(new File(caminho), Dados.class);
		ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream("./src/main/resources/deputados.serialize"));
		oos.writeObject(data.getClass());
		oos.close();
		// JSON pretty
		//mapper.writerWithDefaultPrettyPrinter().writeValueAsString(data).getClass();
		
	}

	public Object deserializeObjectsFromFile() throws IOException, ClassNotFoundException {
		ObjectInputStream ois = new ObjectInputStream(new FileInputStream("./src/main/resources/deputados.serialize"));
		Object data = ois.readObject();
		return data;
	}
	
	public static void main(String[] args) throws IOException, ClassNotFoundException {
		JsonController js = new JsonController();
		//js.JaksonJson();
		//js.serializeObjects("./src/main/resources/result.json");
		System.out.println(js.deserializeObjectsFromFile());
	}
}

